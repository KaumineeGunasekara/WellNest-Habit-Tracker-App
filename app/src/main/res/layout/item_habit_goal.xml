<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/habit_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:id="@+id/habit_card_inner"
        android:background="@drawable/selected_color_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/habit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habit Title"
                android:textSize="18sp"
                android:textColor="#222"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/habit_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal"
                android:textSize="15sp"
                android:textColor="#666"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/habit_amount_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#444"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/habit_done_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/box"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginStart="16dp"
            app:tint="#2E7D32" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
