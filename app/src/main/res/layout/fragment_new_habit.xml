<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF"
    tools:context=".NewHabitFragment">

    <!-- Title at the top -->
    <TextView
        android:id="@+id/title_new_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="9dp"
        android:text="Create Your New Habit"
        android:textColor="#23611D"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Card for form fields (centered in view) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_habit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TICK and CROSS HEADER INSIDE THE BOX -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="1dp"
                android:paddingEnd="1dp">

                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="Cancel"
                    android:src="@drawable/cross"
                    app:tint="#EC4343" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/confirm"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:contentDescription="Confirm"
                    android:src="@drawable/tick"
                    app:tint="#23611D" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habit Name"
                android:textColor="#23611D"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_habit"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="14dp"
                android:background="#DCDCDC"
                android:hint="e.g. Drink Water"
                android:inputType="text"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal"
                android:textColor="#23611D"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_goal"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="14dp"
                android:background="#DCDCDC"
                android:hint="e.g. Stay hydrated"
                android:inputType="text"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Amount"
                android:textColor="#23611D"
                android:textSize="17sp"
                android:textStyle="bold" />

            <!-- Target value and unit selection row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/input_target_value"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:background="#DCDCDC"
                    android:hint="e.g. 2000"
                    android:inputType="number"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/input_target_unit"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="#DCDCDC"
                    android:entries="@array/habit_units" />
            </LinearLayout>

            <!-- Color picker row -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Habit Color"
                android:textColor="#23611D"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/color_picker_row"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/color_blue"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="#1976D2"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/color_green"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="#388E3C"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/color_pink"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="#E91E63"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/color_yellow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="#FFC107"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/color_orange"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="#FF5722"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/color_purple"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#9C27B0"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Reminder Time"
                android:textColor="#23611D"
                android:textSize="17sp"
                android:textStyle="bold" />

            <!-- Time picker row: EditText + small icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/input_time"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:background="#DCDCDC"
                    android:focusable="false"
                    android:hint="Select time"
                    android:inputType="none"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/time_picker_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Pick time"
                    android:src="@drawable/timer_icon"
                    app:tint="#23611D" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
