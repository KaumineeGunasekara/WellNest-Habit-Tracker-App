<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <!-- Top Left Date Text -->
    <TextView
        android:id="@+id/top_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="20sp"
        android:textColor="#23611D"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        android:layout_marginBottom="12dp"
        android:gravity="start"/>

    <!-- Week Bar (centered horizontally) -->
    <LinearLayout
        android:id="@+id/week_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="18dp">

        <!-- Monday -->
        <LinearLayout
            android:id="@+id/box_mon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/label_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textSize="16sp"
                android:textColor="#222"
                android:gravity="center"/>
            <TextView
                android:id="@+id/date_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp"
                android:textColor="#444444"
                android:gravity="center"/>
        </LinearLayout>
        <!-- Tuesday -->
        <LinearLayout android:id="@+id/box_tue" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:id="@+id/label_tue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="T" android:textSize="16sp" android:textColor="#222" android:gravity="center"/>
            <TextView android:id="@+id/date_tue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2" android:textSize="14sp" android:textColor="#444444" android:gravity="center"/>
        </LinearLayout>
        <!-- Wednesday -->
        <LinearLayout android:id="@+id/box_wed" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:id="@+id/label_wed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="W" android:textSize="16sp" android:textColor="#222" android:gravity="center"/>
            <TextView android:id="@+id/date_wed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3" android:textSize="14sp" android:textColor="#444444" android:gravity="center"/>
        </LinearLayout>
        <!-- Thursday -->
        <LinearLayout android:id="@+id/box_thu" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:id="@+id/label_thu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="T" android:textSize="16sp" android:textColor="#222" android:gravity="center"/>
            <TextView android:id="@+id/date_thu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4" android:textSize="14sp" android:textColor="#444444" android:gravity="center"/>
        </LinearLayout>
        <!-- Friday -->
        <LinearLayout android:id="@+id/box_fri" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:id="@+id/label_fri" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="F" android:textSize="16sp" android:textColor="#222" android:gravity="center"/>
            <TextView android:id="@+id/date_fri" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5" android:textSize="14sp" android:textColor="#444444" android:gravity="center"/>
        </LinearLayout>
        <!-- Saturday -->
        <LinearLayout android:id="@+id/box_sat" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:id="@+id/label_sat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="S" android:textSize="16sp" android:textColor="#222" android:gravity="center"/>
            <TextView android:id="@+id/date_sat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6" android:textSize="14sp" android:textColor="#444444" android:gravity="center"/>
        </LinearLayout>
        <!-- Sunday -->
        <LinearLayout android:id="@+id/box_sun" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:id="@+id/label_sun" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="S" android:textSize="16sp" android:textColor="#222" android:gravity="center"/>
            <TextView android:id="@+id/date_sun" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="7" android:textSize="14sp" android:textColor="#444444" android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Add Habit Button (center under week bar) -->
    <Button
        android:id="@+id/add_habit_button"
        android:layout_width="220dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#23611D"
        android:text="+ Add a Habit"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginTop="26dp"/>

    <TextView
        android:id="@+id/today_mood_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone" />


    <!-- Saved Habits/Goals List -->
    <TextView
        android:id="@+id/your_goals_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goals for the day"
        android:textColor="#333"
        android:textSize="19sp"
        android:paddingStart="24dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="6dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/habits_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"/>


</LinearLayout>
